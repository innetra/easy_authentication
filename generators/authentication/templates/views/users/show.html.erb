<%% content_for :sidebar do -%>
  <%% sidebar_section "user_details" do %>
    <h1>
<% if options[:use_easy_contacts] -%>
      <div class="title_actions">
        <%%= link_to t("users.show.user_details.edit_link"), edit_person_url(@user.person) %>
      </div>
<% end -%>
      <%%= t("users.show.user_details.title") %>
    </h1>
    <table>
      <tr>
        <td class="label"><%%= t("activerecord.attributes.user.login") %></td>
        <td><%%= @user.login %></td>
      </tr>
      <tr>
        <td class="label"><%%= t("activerecord.attributes.email.address") %></td>
<% if options[:use_easy_contacts] -%>
        <td><%%= auto_link @user.person.emails.first.address %></td>
<% else -%>
        <td><%%= auto_link @user.email %></td>
<% end -%>
      </tr>
    </table>
  <%% end %>
  <%% sidebar_section "password_section" do %>
    <%%= link_to t("users.show.password_section.edit_link"), edit_user_url(@user) %>
  <%% end %>

  <%% sidebar_section "roles_section" do %>
    <%% unless @user.roles.blank? -%>
      <h1>
        <div class="title_actions">
          <%%= link_to t("users.show.roles_section.edit_link"), edit_user_role_url(@user) %>
        </div>
        <%%= t("users.show.roles_section.title") %>
      </h1>
      <ul>
        <%% for role in @user.roles -%>
          <%% content_tag_for(:li, role) do -%>
            <%%= role.name %>
          <%% end -%>
        <%% end -%>
      </ul>
    <%% end -%>
  <%% end %>

<%% end -%>
<h1>
  <div class="title_actions">
    <%%= link_to t("users.show.back"), users_url %>
  </div>
<% if options[:use_easy_contacts] -%>
  <%%= @user.person.full_name %><br />
  <%% unless @user.person.title_description -%>
    <%%= @user.person.title_description %>
  <%% end -%>
<% else -%>
  <%%= @user.full_name %>
<% end -%>
</h1>
