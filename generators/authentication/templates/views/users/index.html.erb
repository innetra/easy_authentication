<%% content_for :header do -%>
  <%%= stylesheet_link_tag "users/index", :media => :all %>
<%% end -%>

<%% content_for :sidebar do -%>
  <%% shadowbox "users_actions", :class => "sidebar_section" do %>
    <%%= link_to t("users.index.new_link"), new_user_url %>
  <%% end %>
<%% end -%>

<h1><%%= t "users.index.title" %></h1>

<ul>
  <%% for user in @users -%>
    <%% content_tag_for(:li, user) do %>
<% if options[:use_easy_contacts] -%>
      <%%= link_to user.person.full_name, user, :class => "full_name important" %>
      (<%%= user.login %>)
      <%% unless user.person.title.blank? -%>
        <br /><%%= user.person.title_description %>
      <%% end -%>
<% else -%>
    <%%= link_to user.full_name, user, :class => "full_name important" %>
    (<%%= user.login %>)
<% end -%>
    <%% end %>
  <%% end -%>
</ul>
