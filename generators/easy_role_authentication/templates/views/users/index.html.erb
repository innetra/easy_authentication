<%% content_for :header do -%%>
  <%%= stylesheet_link_tag "users/index", :media => :all %%>
<%% end -%%>

<h1><%%= t "users.index.title" %%></h1>

<ul>
  <%% for user in @users -%%>
    <%% content_tag_for(:li, user) do %%>
      <%%= link_to user.person.full_name, user, :class => "full_name important" %%>
      (<%%= user.login %%>)
      <%% unless user.person.title.blank? -%%>
        <br /><%%= user.person.title_description %%>
      <%% end -%%>
    <%% end %%>
  <%% end -%%>
</ul>
