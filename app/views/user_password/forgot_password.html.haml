- title t("user_password.forgot_password.title")
- shadowbox "forgot_password_form" do
  - form_tag "/user_password/send_password_token" do
    %p
      = label_tag t("user_password.forgot_password.login")
      %br
      = text_field_tag 'login', @login
    %hr
    %p
      = submit_tag t("user_password.forgot_password.submit"), :id => "submit"
