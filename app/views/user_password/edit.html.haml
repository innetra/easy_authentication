- title t('.title', :default => 'Change Password for {{full_name}} ({{login}})', :full_name => @user.full_name, :login => @user.login)

#page.users
  - shadowbox 'page_content' do
    = user_feedback
    .title_actions= link_to t('.cancel', :default => 'Cancel'), root_url
    - form_for @user, :url => { :action => 'update' } do |form|
      %p
        = form.label :current_password
        = required_field
        %br
        = form.password_field :current_password
        = form.error_message_on :current_password
      %h2= t('.new_password', :default => 'New Password')
      %p
        = form.label :password
        = required_field
        %br
        = form.password_field :password
        = form.error_message_on :password
      %p
        = form.label :password_confirmation
        = required_field
        %br
        = form.password_field :password_confirmation
        = form.error_message_on :password_confirmation
      %hr
      %p
        = submit_tag t('.submit', :default => 'Save'), :id => 'submit'
        &nbsp;|&nbsp;
        = link_to t('.cancel', :default => 'Cancel'), root_url, :class => 'red'
