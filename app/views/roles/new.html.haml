- title t('.title', :default => 'New Role')

#page.roles
  - shadowbox 'page_content', :class => 'roles new' do
    = user_feedback
    .title_actions= link_to t('.cancel', :default => 'Cancel'), roles_url
    - form_for @role do |form|
      = render form
      %hr
      %p
        = submit_tag t('.submit', :default => 'Save')
        &nbsp;|&nbsp;
        = link_to t('.cancel', :default => 'Cancel'), roles_url, :class => 'red'
