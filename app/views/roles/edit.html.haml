- title t('.title', :default => 'Role: {{name}}', :name => @role.name)

#page.roles
  - shadowbox 'page_content', :class => 'roles edit' do
    = user_feedback
    .title_actions= link_to t('.cancel', :default => 'Cancel'), @role
    - form_for @role do |form|
      = render form
      %hr
      %p
        = submit_tag t('.submit', :default => 'Save')
        &nbsp;|&nbsp;
        = link_to t('roles.edit.cancel', :default => 'Cancel'), roles_url, :class => 'red'
