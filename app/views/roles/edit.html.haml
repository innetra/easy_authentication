- title t('roles.edit.title', :name => @role.name)
#page
  - shadowbox 'page_content', :class => 'roles edit' do
    %h1
      .title_actions= link_to t('roles.edit.cancel'), @role
      = yield :title
    - form_for @role do |form|
      = render form
      %hr
      %p
        = submit_tag t('roles.edit.submit')
        &nbsp;|&nbsp;
        = link_to t('roles.edit.cancel'), roles_url, :class => 'red'
