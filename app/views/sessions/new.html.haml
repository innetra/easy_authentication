- shadowbox 'login_form' do
  - form_tag sessions_url do
    %p
      = label_tag t('sessions.new.login')
      %br
      = text_field_tag 'login', @login
    %p
      = label_tag t("sessions.new.password")
      %br
      = password_field_tag 'password', nil
    %p
      = submit_tag t('sessions.new.submit'), :id => 'submit_button'
      = check_box_tag 'remember_me', '1', @remember_me
      %span= t('sessions.new.remember_me')
    %hr
    %p= link_to t('sessions.new.recover_password'), forgot_password_url, :class => 'red'
