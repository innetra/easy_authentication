- title t('users.edit.title', :full_name => @user.full_name, :login => @user.login)
#page
  - shadowbox 'page_content' do
    %h1
      .title_actions
        = link_to t("users.new.cancel"), @user
      = yield :title
    - form_for @user do |form|
      = render :partial => form
      %hr
      %p
        = submit_tag t("users.new.submit")
        &nbsp;|&nbsp;
        = link_to t("users.new.cancel"), users_url, :class => :red
