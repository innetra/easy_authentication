- title t(".title", :default => 'New User')

#page.users
  - shadowbox 'page_content' do
    = user_feedback
    .title_actions= link_to t(".cancel", :default => 'Cancel'), users_url
    - form_for @user do |form|
      = render :partial => form
      %hr
      %p
        = submit_tag t(".submit", :default => 'Save')
        &nbsp;|&nbsp;
        = link_to t(".cancel", :default => 'Cancel'), users_url
