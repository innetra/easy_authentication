%table
  %tr
    %td
      %p
        %span.big
          = form.label :first_name
          = required_field
          %br
          = form.text_field :first_name
        %br
        = form.error_message_on :first_name
    %td
      %p
        %span.big
          = form.label :last_name
          = required_field
          %br
          = form.text_field :last_name
        %br
        = form.error_message_on :last_name
%hr
%p
  = form.label :email
  = required_field
  %br
  = form.text_field :email
  = form.error_message_on :email
  %br
  %span.comment= t(".email_comment", :default => 'e.g. myname@mycompany.com')
%hr
- if @user.new_record?
  %p
    = form.label :login
    = required_field
    %br
    = form.text_field :login
    = form.error_message_on :login
    %br
    %span.comment= t(".login_comment", :default => 'myname')
%p
  = form.label :password
  = required_field
  %br
  = form.password_field :password
  = form.error_message_on :password
  %br
  %span.comment= t(".password_comment", :default => 'at least 6 characters long')
%p
  = form.label :password_confirmation
  = required_field
  %br
  = form.password_field :password_confirmation
  = form.error_message_on :password_confirmation
  %br
  %span.comment= t(".password_confirmation_comment", :default => 'confirm your password')
